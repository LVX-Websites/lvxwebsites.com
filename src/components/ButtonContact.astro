---
import { Icon } from "astro-icon/components";

interface Props {
	isFlipped?: boolean;
}

const { isFlipped } = Astro.props;

const colors = isFlipped
	? "bg-yellow-300 hover:bg-yellow-400 text-emerald-600"
	: "bg-emerald-500 hover:bg-emerald-600 text-white";
---

<script>
const email = 'launch@lvxwebsites.com'
const subject = 'I want a better website'

const handleButtonClick = () => {
	window.open(`mailTo:${email}?subject=${subject}`, '_blank');
};

const buttons = document.querySelectorAll('.buttonContact')
buttons.forEach(button => {
  button.addEventListener('click', handleButtonClick)
})
</script>

<button
  type="button"
  class={`buttonContact rounded-lg px-6 py-3 font-medium text-lg lg:text-2xl ${colors} `}
>
  <span class="flex items-center">
    <Icon
      name="mdi:envelope-outline"
      size="28px"
      class="mr-2"
    />
    Contact Us
  </span>
</button>
